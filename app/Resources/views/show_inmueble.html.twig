{% block stylesheets %}
    {{ parent() }}
{% endblock stylesheets%}


{% block fos_user_content %}
{#{{ dump(negocio) }}#}
{#<div class="container">#}
    <div class="contenedor-inmueble">
        <section class="col-inmueble-1">
            <div class="datos-header">
                <div class="datos-anterior">
                    <a href="#"><i class="fa fa-arrow-left" aria-hidden="true"></i></a>
                </div>
                <div class="datos-direccion">
                    <h1>{{ negocio.nombre ~ "," }}</h1>
                    <div>
                        <a href="#mapa"><i class="fa fa-map-marker" aria-hidden="true"></i> <p>{{ negocio.direccion~","~negocio.direccion}}</p></a>
                    </div>
                </div>
                <div class="datos-icon-header">
                    <ul>
                        <li class="lista-header-icon"><i class="fa fa-flag" aria-hidden="true"></i></li>
                        <li class="lista-header-icon"><i class="fa fa-heart-o" aria-hidden="true"></i></li>
                        <li class="lista-header-icon"><i class="fa fa-flag" aria-hidden="true"></i></li>
                        <li class="lista-header-icon"><i class="fa fa-heart-o" aria-hidden="true"></i></li>
                    </ul>
                </div>
            </div>
            <div class="data-izquierda">
                <div class="datos-izquierda">
                   <div class="datos-principales">
                       {#<div class="datos-principales-titulo">Datos Principales</div>#}
                       <h3 class="datos-principales-titulo">Datos Principales</h3>
                       <ul>
                           <li class="lista-datos-principales">
                               <span class="">
                                   <i class="fa fa-heart-o" aria-hidden="true"></i> Proyecto Inmobiliario
                               </span>
                               <span></span>
                           </li>
                           <li class="lista-datos-principales">
                               <span class="">
                                   <i class="fa fa-heart-o" aria-hidden="true"></i> Precio Desde {{ negocio.precioSoles }}
                               </span>
                               <span></span>
                           </li>
                           <li class="lista-datos-principales">
                               <span class="">
                                   <i class="fa fa-heart-o" aria-hidden="true"></i> Precio en Dólares desde US$ {{ negocio.precioDolares }}
                               </span>
                               <span></span>
                           </li>
                           <li class="lista-datos-principales">
                               <span class="">
                                   <i class="fa fa-heart-o" aria-hidden="true"></i> {{ negocio.areaTotal }} Área Total
                               </span>
                               <span></span>
                           </li>
                           <li class="lista-datos-principales">
                               <span class="">
                                   <i class="fa fa-heart-o" aria-hidden="true"></i> {{ negocio.areaTechada }} Área Techada
                               </span>
                               <span></span>
                           </li>
                           <li class="lista-datos-principales">
                               <span class="">
                                   <i class="fa fa-heart-o" aria-hidden="true"></i> {{ negocio.dormitorios }} Dormitorios
                               </span>
                               <span></span>
                           </li>
                           <li class="lista-datos-principales">
                               <span class="">
                                   <i class="fa fa-heart-o" aria-hidden="true"></i> {{ negocio.banos }} Baños
                               </span>
                               <span></span>
                           </li>
                       </ul>
                   </div>
                </div>
                <div id="mapa" class="datos-ubicacion">
                    <div class="contenedor-ubicacion">
                        <h3 class="datos-titulo-ubicacion">Ubicación</h3>
                        <div class="datos-direc">
                            <p><i class="fa fa-map-marker" aria-hidden="true"></i> {{ negocio.direccion }}</p><br>
                            <p id="latitud">{{ negocio.googleMapLat }}</p>
                            <p id="longuitud">{{ negocio.googleMapLng }}</p>
                        </div>
                        <div class="localizacion">
                            {#<img src="https://dummyimage.com/380" alt="" style="position: relative; right: 20px; max-width: 100%">#}
                        </div>
                    </div>
                </div>
            </div>

            <div class="data-derecha">
                <div class="datos-derecha">
                    <div class="datos-descripcion">
                        <h3 class="datos-descripcion-titulo">Descripción</h3>
                        <p class="descripcion-negocio">{{ negocio.description }}</p>
                    </div>
                </div>

                <div class="datos-servicios">
                    <div class="contenedor-servicios">
                        <h3 class="datos-titulo-servicios">Servicios</h3>
                        <div class="">
                            {#{{ dump(negocio.sevicios[0]) }}#}
                            {% for servicio in negocio.sevicios%}
                                <p><i class="fa fa-check" aria-hidden="true"></i> {{ servicio.nombre }}</p>
                            {% endfor %}
                        </div>
                    </div>
                </div>

                <div class="datos-generales">
                    <div class="contenedor-generales">
                        <h3 class="datos-titulo-generales">Generales</h3>
                        <div class="">
                            {% for general in negocio.generales %}
                                <p><i class="fa fa-check" aria-hidden="true"></i> {{ general.nombre }}</p>
                            {% endfor %}
                        </div>
                    </div>
                </div>
            </div>


        </section>
        <section class="col-inmueble-2">
            <div class="zona-precio">
                <div class="zona-precio-contenido">
                    <div class="precio">
                        <span class="titulo-zona-inmueble">Desde:</span>
                        <span class="precio-zona-inmueble"> S/ {{ negocio.precioSoles }}</span>
                    </div>
                    <div class="zona-calcula-hipoteca">
                        <a class="calcula-hipoteca" href="#">CALCULA TU HIPOTECA</a>
                    </div>
                </div>
            </div>
            <div class="zona-contactanos">
                <div class="zona-contactanos-contenido">
                    <div class="zona-contactanos-header">
                        <a class="link-inmobiliaria" href="">
                            <span> {{ negocio.nombre }} </span>
                                <img src="{{ asset('images/negocios/logo/' ~ negocio.logo.logoName ) }}" alt="" width="70px">
                        </a>
                    </div>
                    <div class="zona-telefono">
                        <i class="fa fa-phone" aria-hidden="true"></i> VER TELÉFONO
                    </div>
                    <div class="zona-formulario">
                        <a class="btn btn-konstruye">Contactar Anuncio</a>
                    </div>
                </div>
            </div>
        </section>
    </div>
{#</div>#}
{% endblock fos_user_content %}