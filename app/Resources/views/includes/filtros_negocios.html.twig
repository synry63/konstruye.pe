
<div class="container-filtro">
    <div class="title-filtro">
        {#<h4 class="titulo-filtro">#}
        {% if app.request.get('slug_categoria') == cmain.slug %}
            <a onclick="return false;" href="{{ path(name, {"slug_categoria":cmain.slug, "slug_seccion":app.request.get('slug_seccion'),"search":search}) }}" class="actif">{{ cmain.nombre }}</a>  &nbsp;&nbsp;&nbsp;   <i class=" titulo-filtro fa fa-angle-up" aria-hidden="true"></i>
        {% else %}
            <a onclick="return false;" href="{{ path(name, {"slug_categoria":cmain.slug, "slug_seccion":app.request.get('slug_seccion'),"search":search}) }}" class="">{{ cmain.nombre }}</a> &nbsp;&nbsp;&nbsp;   <i class="titulo-filtro fa fa-angle-up " aria-hidden="true"></i>
        {% endif %}
        {#</h4>#}
    </div>
    <div class="body-filtro">
        <div class="body-filtro-list">
            <ul>
                <li>
                    {% for csub in cmain.children %}
                        {#trouve if inside sub categoria#}
                        {% set trouve = false %}
                        {% for csubsub in csub.children %}
                            {% if app.request.get('slug_categoria') == csubsub.slug  %}
                                {% set trouve = true %}
                            {% endif %}
                        {% endfor %}
                        {#end trouve#}
                        {% if (app.request.get('slug_categoria') == csub.slug) or (trouve == true) %}
                            {% if trouve == true %}
                                <a href="{{ path(name, {"slug_categoria":csub.slug, "slug_seccion":app.request.get('slug_seccion'),"search":search}) }}" class="default-a">{{ csub.nombre }} </a>
                            {% else %}
                                <a href="{{ path(name, {"slug_categoria":csub.slug, "slug_seccion":app.request.get('slug_seccion'),"search":search}) }}" class="actif default-a">{{ csub.nombre }} </a>
                                <a class="select" href="{{ path('lisdato_seccion',{'slug_seccion':app.request.get('slug_seccion')}) }}"><i class="fa fa-times" aria-hidden="true"></i></a>
                            {% endif %}
                            {% if csub.children|length > 0 %}
                                <ul>
                                    {% for csubsub in csub.children %}
                                        <li style="padding-left: 20px">
                                            {% if app.request.get('slug_categoria') == csubsub.slug  %}
                                                <a href="{{ path(name, {"slug_categoria":csubsub.slug, "slug_seccion":app.request.get('slug_seccion'),"search":search}) }}" class="actif default-a">{{ csubsub.nombre }} </a>
                                                <a class="select" href="{{ path('lisdato_seccion',{'slug_seccion':app.request.get('slug_seccion')}) }}"><i class="fa fa-times" aria-hidden="true"></i></a>
                                            {% else %}
                                                <a href="{{ path(name, {"slug_categoria":csubsub.slug, "slug_seccion":app.request.get('slug_seccion'),"search":search}) }}" class="default-a">{{ csubsub.nombre }} </a>
                                            {% endif %}
                                        </li>
                                    {% endfor %}
                                </ul>
                            {% endif %}
                        {% else %}
                            <a href="{{ path(name, {"slug_categoria":csub.slug, "slug_seccion":app.request.get('slug_seccion'),"search":search}) }}" class="default-a">{{ csub.nombre }} </a>
                        {% endif %}
                    {% endfor %}
                </li>
            </ul>

        </div>
    </div>
</div>





