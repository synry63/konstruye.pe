{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('js/jquery.content_slider.min.js') }}" type="text/javascript"></script>
    <script>
        (function($){
            $(document).ready(function() {

                var image_array = new Array();
                image_array = [
                    {image: '{{ asset('images/assets/1.jpg') }}', link_url: 'content/232.png', link_rel: 'prettyPhoto'},
                    {image: '{{ asset('images/assets/2.jpg') }}', link_url: 'content/2323.png', link_rel: 'prettyPhoto'},
                    {image: '{{ asset('images/assets/3.jpg') }}', link_url: 'conten/332.png', link_rel: 'prettyPhoto'}
                ];
                $('#slider1').content_slider({	// bind plugin to div id="slider1"
                    map : image_array,
                    automatic_height_resize:1,
                    max_shown_items: 5,
                    left_offset:10,
                    big_pic_width: 200,
                    big_pic_height: 200,
                    active_item: 0,
                    middle_click: 1,
                    border_on_off: 0,
                    hide_prettyPhoto:1,
                    allow_shadow: 0,
                    border_radius: -1
                });
            });
        })(jQuery);
    </script>


{% endblock javascripts %}

