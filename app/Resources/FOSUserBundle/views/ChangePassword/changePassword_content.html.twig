{% trans_default_domain 'FOSUserBundle' %}
<div class="container">
    <div class="col-md-12">
        <div class="col-md-6 col-md-offset-3">
            <div class="contenedor-formulario-contraseña">
                <div class="contenedor-contraseña-titulo">
                    <h1>Cambiar Contraseña</h1>
                </div>
                <div class="contenedor-validacion">
                    Los campos marcados con * son obligatorios
                </div>
                {{ form_start(form, { 'action': path('fos_user_change_password'), 'attr': { 'class': 'fos_user_change_password','novalidate':'novalidate' } }) }}
                    <div class="form-group">
                        {{ form_label(form.current_password,'*Contraseña Actual') }}
                        {% if form.current_password.vars.errors|length > 0 %}
                        <div style="overflow: hidden" class="alert alert-konstruye"><i style="float:left; margin-right: 2px" class="fa fa-exclamation-circle" aria-hidden="true"></i>{{ form_errors(form.current_password) }}</div>
                        {% endif %}
                        {{ form_widget(form.current_password,{'attr':{'class':'form-control'}}) }}
                    </div>
                    <div class="form-group">
                        {{ form_label(form.plainPassword.first,'*Nueva Contraseña') }}
                        {% if form.plainPassword.first.vars.errors|length > 0 %}
                            <div style="overflow: hidden" class="alert alert-konstruye"><i style="float:left; margin-right: 2px" class="fa fa-exclamation-circle" aria-hidden="true"></i>{{ form_errors(form.plainPassword.first) }}</div>
                        {% endif %}
                        {{ form_widget(form.plainPassword.first,{'attr':{'class':'form-control'}}) }}
                    </div>
                    <div class="form-group">
                        {{ form_label(form.plainPassword.second,'*Repita la Contraseña') }}
                        {{ form_errors(form.plainPassword.second) }}
                        {{ form_widget(form.plainPassword.second,{'attr':{'class':'form-control'}}) }}
                    </div>
                    <div>
                        <input class="btn btn-konstruye" type="submit" value="{{ 'change_password.submit'|trans }}" />
                    </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
</div>