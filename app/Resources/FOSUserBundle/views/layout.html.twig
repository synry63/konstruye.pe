    <script>

        var seccion = 'todos';
        $(".selectpicker").change(function () {
            seccion = $(this).val();
            $(".searcher input.search").val("");
        });
        $(document).ready(function () {

            function monkeyPatchAutocomplete() {

                // Don't really need to save the old fn,
                // but I could chain if I wanted to
                var oldFn = $.ui.autocomplete.prototype._renderItem;

                $.ui.autocomplete.prototype._renderItem = function (ul, item) {
                    var re = new RegExp("^" + this.term, "i");
                    var t = item.label.replace(re, "<span style='font-weight:bold;color:#009FE3'>" + this.term + "</span>");
                    return $("<li></li>")
                        .data("item.autocomplete", item)
                        .append("<div>" + t + "<br><span style='font-weight: 100;font-size: 11px;font-style: italic'>" + (item.type != undefined ? item.type : "") + "</span></div>")//append( "<a>" + t + "</a>" )
                        .appendTo(ul);
                };
            }

            monkeyPatchAutocomplete();
            // autocomplete for products
            $(".searcher-products input.search").autocomplete({
                source: function (request, response) {
                    var url = '{{ path('buscar_productos') }}'
                    $.ajax({
                        url: url,
                        data: {
                            q: request.term
                        },
                        success: function (data) {
                            //console.log(data);
                            // Handle 'no match' indicated by [ "" ] response
                            response(data.length === 0 ? ['Ningun resultado encontrado'] : data);
                        }
                    });
                },
                focus: function (event, ui) {
                    $(".searcher-products input.search").val(ui.item.label);
                    return false;
                },
                minLength: 1,
                select: function (event, ui) {
                    $(".searcher-products input.search").val(ui.item.label);
                    $(".searcher-products").submit();
                }
            });
            // autocomplete for negocios
            $(".searcher input.search").autocomplete({
                source: function (request, response) {
                    var url = '{{ path('buscar_negocios_by_seccion_null') }}'
                    //s1_found_data = false;
                    $.ajax({
                        url: url + seccion,
                        data: {
                            q: request.term
                        },
                        success: function (data) {
                            //console.log(data);
                            // Handle 'no match' indicated by [ "" ] response
                            response(data.length === 0 ? ['Ningun resultado encontrado'] : data);
                            //if(data.length>0) s1_found_data = true;
                        }
                    });
                },
                focus: function (event, ui) {
                    $(".searcher input.search").val(ui.item.label);
                    return false;
                },
                minLength: 1,
                select: function (event, ui) {
                    //if(!s1_found_data) return false;
                    $(".searcher input.id").val(ui.item.identifier);
                    $(".searcher input.search").val(ui.item.label);
                    $(".searcher input.instance").val(ui.item.instance);
                    $(".searcher").submit();
                }
            });
        });

        // AFTER
        $('.tooltip2').tooltipster({
            theme: 'tooltipster-shadow'
        });

        $('.selectpicker').selectpicker({
            style: 'btn btn-default',
