        });


        $("#hide3").addClass("active");

        $("#hide3").click(function () {
            $("#hide4").removeClass("active");
            $("#hide3").addClass("active");
            $("#s3").hide();
            $("#s4").show();
        });
        $("#hide4").click(function () {
            $("#hide3").removeClass("active")
            $("#hide4").addClass("active");
            $("#s4").hide();
            $("#s3").show();
        });

        $("#search-brand").click(function () {
            $("#search-cop").slideToggle();
