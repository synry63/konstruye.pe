                        var url = $(".s1").attr('data-buscar-url');
                        s1_found_data = false;
                        $.ajax( {
                            url: url+seccion,
                            //dataType: "jsonp",
                            data: {
                                q: request.term
                            },
                            success: function( data ) {
                                //console.log(data);
                                // Handle 'no match' indicated by [ "" ] response
                                response( data.length === 0 ? ['Ningun resultado encontrado'] : data );
                                if(data.length>0) s1_found_data = true;
                            }
                        } );
